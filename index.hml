<!doctype html>
<html  ng-app="testApp" lang="fr">
<head>

  <meta charset="utf-8">
  <link rel="stylesheet" href="css/style.css" media="screen" title="no title" charset="utf-8">
  <title> Formation Angular</title>

</head>
<body >
    <h1>Titre de niveau 1 </h1>
    <section ng-controller="mainCtrl">
      <h1 ng-style="alert">{{ title }}</h1>
      <img ng-src="img/{{imgjoueur}}" ng-style="visible"/></br>
      <input  type="text" name="name" value="" ng-model="playerNumber">
      <button type="button" ng-click="reset('playerNumber')" name="button">RESET</button>
      <button type="button" ng-click="alert={'color':'grey'}" name="button">change Style</button>
      <ul>
        <li ng-repeat="joueur in joueurs">
          <span   ng-mouseover="displayImg(joueur)"
                  ng-mouseleave="hideImg(joueur)">{{ joueur.firstname }}</span>
        </li>
      </ul>
      <input type="button" name="uppercase" id="uppercase" value="Uppercase" ng-click="majus()">
      <br>
      <hr>
      <input type="text" name="name" value="" ng-model="playerLastName">
      <button type="button" ng-click="reset(playerLastName)" name="button">RESET</button>
      <hr>
    </section>
    <section ng-controller="playerCtrl">
        <p> Paragraphe  {{ title }} </p>
    </section>

  <!--Start Scripts-->
    <script src="js/angular.min.js" ></script>
    <script src="js/app.js" ></script>
    <script src="js/jquery-3.0.0.min.js"></script>
  <!--End Scripts-->
</body>
</html>
